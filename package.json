{
  "name": "unplugin-typia-monorepo",
  "private": true,
  "description": "",
  "license": "MIT",
  "author": "ryoppippi",
  "type": "module",
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter '@ryoppippi/*' build",
    "postbuild": "bun run --filter '!@ryoppippi/*' build",
    "deploy": "bun run --filter '*' deploy",
    "format": "sort-package-json **/package.json && bun run --filter '*' format",
    "preinstall": "npx only-allow bun",
    "lint": "bun run --filter '*' lint",
    "prepare": "simple-git-hooks",
    "release": "cd packages/unplugin-typia && bun run release",
    "taze": "bun x taze -r",
    "test": "bun run build && bun run --filter '*' test"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run format"
  },
  "devDependencies": {
    "simple-git-hooks": "^2.13.0",
    "sort-package-json": "^3.2.1"
  },
  "packageManager": "bun@1.2.5",
  "trustedDependencies": [
    "bunbuild",
    "esbuild",
    "nextjs",
    "sharp",
    "sveltekit",
    "unrs-resolver",
    "vite-hono",
    "vite-react",
    "webpack-minimal"
  ]
}
